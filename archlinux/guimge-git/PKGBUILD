# Contributor: Apkawa <apkawa@gmail.com>

pkgname=guimge-git
pkgver=20090727
pkgrel=2
pkgdesc="gtk picture uploader to different imagehostings written on python"
arch=('i686' 'x86_64')
url="http://code.google.com/p/uimge/"
license=('GPL')
makedepends=('git')
depends=('python' 'uimge-git' 'pygtk' 'gtk')
source=( )
md5sums=( )

_gitname="uimge"
_gitroot="git://github.com/Apkawa/uimge.git"
build() {
  cd ${srcdir}
  msg "Connecting to $_gitroot GIT server...."

  if [ -d ${srcdir}/$_gitname ] ; then
  cd $_gitname && git pull origin
  msg "The local files are updated."
  else
  git clone $_gitroot
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  cp -r ${srcdir}/${_gitname} ${srcdir}/${_gitname}-build
  cd ${srcdir}/${_gitname}-build/uimgepy
  
  #install guimge gui
  cd ${srcdir}/${_gitname}-build/guimge
  mkdir $startdir/pkg/usr/share/{guimge,pixmaps,applications} -p
  cp guimge.glade guimge.desktop icons $startdir/pkg/usr/share/guimge/ -r
  ln -s  /usr/share/guimge/icons/guimge.png $startdir/pkg/usr/share/pixmaps/
  ln -s  /usr/share/guimge/guimge.desktop $startdir/pkg/usr/share/applications/
  install -Dm755 guimge.py $startdir/pkg/usr/bin/guimge
}
